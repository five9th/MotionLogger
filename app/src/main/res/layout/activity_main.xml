<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.MainActivity">

    <GridLayout
        android:id="@+id/gl_sensor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:rowCount="8"
        android:columnCount="2"
        android:padding="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:paddingHorizontal="2dp"
            android:textStyle="bold"
            android:text="@string/sensors" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="2dp"
            android:text="@string/accelerometer" />
        <TextView
            android:id="@+id/tv_has_accelerometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="2dp"
            android:text="@string/gyroscope" />
        <TextView
            android:id="@+id/tv_has_gyroscope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="2dp"
            android:text="@string/magnetometer" />
        <TextView
            android:id="@+id/tv_has_magnetometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="2dp"
            android:text="@string/game_rotation_vector" />
        <TextView
            android:id="@+id/tv_has_game_rotation_vector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="2dp"
            android:text="@string/rotation_vector" />
        <TextView
            android:id="@+id/tv_has_rotation_vector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="2dp"
            android:text="@string/linear_acceleration" />
        <TextView
            android:id="@+id/tv_has_linear_acceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="2dp"
            android:text="@string/gravity" />
        <TextView
            android:id="@+id/tv_has_gravity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1" />
    </GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_session_list"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/gl_sensor_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_session_info"
        android:paddingBottom="260dp"
        android:clipToPadding="false"
        />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.9"

        android:layout_margin="8dp"
        >

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="Collecting..."
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/start"
            android:textSize="22sp"
            android:minHeight="68dp"
            android:minWidth="130dp"
            />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/stop"
            android:textSize="22sp"
            android:minHeight="68dp"
            android:minWidth="130dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_margin="8dp"
        >

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="48sp"
            tools:text="00:30"
            />

        <TextView
            android:id="@+id/tv_samples_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/samples_label"
            />

        <TextView
            android:id="@+id/tv_sample_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="1234567889"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>